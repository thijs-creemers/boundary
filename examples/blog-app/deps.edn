{:paths ["src" "resources"]

 :deps {;; Boundary framework (local development)
        boundary/boundary {:local/root "../.."}

        ;; Web server
        ring/ring-core {:mvn/version "1.12.1"}
        ring/ring-jetty-adapter {:mvn/version "1.12.1"}

        ;; Routing
        metosin/reitit {:mvn/version "0.7.2"}

        ;; HTML rendering
        hiccup/hiccup {:mvn/version "2.0.0-RC3"}

        ;; Database
        com.github.seancorfield/next.jdbc {:mvn/version "1.3.939"}
        org.xerial/sqlite-jdbc {:mvn/version "3.45.1.0"}

        ;; Configuration
        aero/aero {:mvn/version "1.1.6"}

        ;; System lifecycle
        integrant/integrant {:mvn/version "0.10.0"}

        ;; Validation
        metosin/malli {:mvn/version "0.16.4"}

        ;; JSON
        metosin/muuntaja {:mvn/version "0.6.10"}

        ;; Logging
        ch.qos.logback/logback-classic {:mvn/version "1.5.6"}}

 :aliases
 {:dev
  {:extra-paths ["test"]
   :extra-deps {integrant/repl {:mvn/version "0.3.3"}}}

  :repl-clj
  {:extra-paths ["dev"]
   :extra-deps {integrant/repl {:mvn/version "0.3.3"}
                nrepl/nrepl {:mvn/version "1.3.0"}
                cider/cider-nrepl {:mvn/version "0.50.2"}}
   :main-opts ["-m" "nrepl.cmdline"
               "--middleware" "[cider.nrepl/cider-middleware]"
               "--port" "7889"]}

  :test
  {:extra-paths ["test"]
   :extra-deps {lambdaisland/kaocha {:mvn/version "1.91.1392"}}
   :main-opts ["-m" "kaocha.runner"]}

  :run
  {:main-opts ["-m" "blog.main"]}}}
